model LLMModels {
  id             String  @id @default(uuid())
  name           String
  version        String
  architecture   String
  parameterCount Int
  vocabSize      Int
  quantization   String
  contextLength  Int
  localPath      String
  format         String
  gpuRequired    Boolean @default(false)
  gpuMemoryGB    Int?
  description    String?
  capabilities   Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deletedAt DateTime?
  isDeleted Boolean   @default(false)

  sessions    ChatSessions[]
  messages    Messages[]
  preferredBy UserSettings[] @relation("PreferredModel")

  @@map("LLMModels")
}
