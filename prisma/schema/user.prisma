model Users {
  id           String    @id @default(uuid())
  email        String    @unique
  username     String?
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  isDeleted    Boolean   @default(false)

  settings UserSettings?
  sessions ChatSessions[]

  @@map("Users")
}
