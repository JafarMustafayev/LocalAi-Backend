model Messages {
  id        String  @id @default(uuid())
  sessionId String
  modelId   String?

  role       MessageRole
  content    String
  reaction   String?
  tokenCount Int?

  reactiion String?

  thinkingContent  String?
  thinkingDuration Int?

  createdAt DateTime @default(now())

  session     ChatSessions  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  model       LLMModels?    @relation(fields: [modelId], references: [id], onDelete: SetNull)
  attachments Attachments[]

  @@map("Messages")
}

enum MessageRole {
  user
  assistant
  system
}
